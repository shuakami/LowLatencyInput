<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景：半透明黑色圆形，灰色描边 -->
    <item>
        <shape android:shape="oval">
            <!-- 背景填充色 (修改为半透明黑色) -->
            <solid android:color="#80000000"/>
            <!-- 边框 (示例：1dp 灰色) -->
            <stroke
                android:width="1dp"
                android:color="#FFCCCCCC"/>
            <!-- 如果需要固定大小，可以在这里设置，但这通常在 ImageView 中控制 -->
            <!-- <size android:width="32dp" android:height="32dp"/> -->
        </shape>
    </item>

    <!-- 前景：居中显示子弹图标 -->
    <item
        android:drawable="@drawable/tfui_icon_bullet_flat_white"
        android:gravity="center"
        android:width="24dp"
        android:height="24dp"> <!-- 图标大小，可以调整 -->
    </item>

</layer-list> 